{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": ["src/js/rodinjs"],
        "exclude": ["src/js/rodinjs/mobile"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": true,
        "useLongnameInNav": false
    },
    "opts": {
        "destination": "./docs/",
        "encoding": "utf8",
        "private": true,
        "recurse": true,
        "template": "./docTemplate/minami"
    }
}

// special for windows users
// node_modules\.bin\jsdoc --configure .jsdoc.json --verbose

// for non windows users
// node_modules/.bin/jsdoc --configure .jsdoc.json --verbose
